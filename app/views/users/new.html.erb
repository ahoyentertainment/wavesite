<h1>Sign Up</h1>
   <%= form_for(@user) do |f| %>
	<%= f.label :name %>
        <%= f.text_field :name %>
	
	<%= f.label :email %>
	<%= f.text_field :email %>
        
	<%= f.label :first_name %>
	<%= f.text_field :first_name %>

	<%= f.label :last_name %>
	<%= f.text_field :last_name %>

	<%= f.label :birthday %>
	<%= f.text_field :birthday %>

	<%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation %>

	<%= f.text_field :gender %>

 	<%= f.submit "Create", class: "signup_button" %>
    <% end %>
